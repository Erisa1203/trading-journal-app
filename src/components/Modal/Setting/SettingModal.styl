@import "../../../stylus/foundation/*"

.modal_wrapper
    position fixed
    left 0
    top 0
    width 100%
    height 100vh
    background rgba(0, 0, 0, .3)
    z-index 1

.modal
    width 500px
    padding 24px
    background: #ffffff
    border-radius 24px
    position: fixed
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    z-index 10

.modal__title
    font-size 2rem
    border-bottom: 1px solid $gray-200
    padding 0 0 8px
    font-weight 700

.modal__block
    display flex
    justify-content: space-between
    margin-top 16px
    padding 0 16px

    input, select
        width 200px
        padding 16px
        border-radius: 8px
        font-size 1.6rem
        border 1px solid $gray-200

.modal__sub
    display flex
    align-items center
.modal__sub, .modal__desc
    font-size 1.6rem

.modal .btn
    margin-left auto
    margin-top 16px
