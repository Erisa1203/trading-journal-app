@import "../../stylus/foundation/_mixin.styl"
@import "../../stylus/foundation/_variable.styl"

.ql-bubble *
        font-size 1.4rem!important

.ql-editor
    div, blockquote, a, p
        font-size 1.4rem!important
    h1, h1 strong, h1 em
        font-size 2.4rem!important
    h2, h2 strong, h2 em
        font-size 2rem!important
    h3, h3 strong, h3 em
        font-size 1.8rem!important

.ql-tooltip 
    left: 0 !important

.ql-bubble .ql-tooltip-arrow
    left 30px

.ql-snow .ql-picker.ql-header .ql-picker-label[data-value="3"]::before,
.ql-snow .ql-picker.ql-header .ql-picker-item[data-value="3"]::before {
  content: 'H3';
  font-size: 10px;
  vertical-align: middle;
}

.img-wrapper {
  position: relative;
}

.menu-icon {
    position: absolute;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 4px;
    padding: 4px;
    top: 8px;
    right: 8px;
    background: $gray-600;
    color: white;
    font-weight: 700;
}

.img-menu {
    display: none;
    position: absolute;
    top: 0;
    right: 0;
    background: white;
    border: 1px solid #ccc;
    z-index: 10;
}

.ql-editor ul > li::before {
    content: none;
}

.ql-editor ol, .ql-editor ul, .ql-editor ol li:not(.ql-direction-rtl), .ql-editor ul li:not(.ql-direction-rtl)
    padding 0
