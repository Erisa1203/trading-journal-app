@import "../../stylus/foundation/*"

.filter
    background $white
    border-radius 8px
    margin-top 16px
    border 1px solid $gray-50
    display none
    &.active
        display flex

.filter 
    legend, label, input, select, .form-checkbox__label
        font-size 1.4rem
        font-en()

.filter__title
    display block
    font-size 1.4rem
    font-weight 600
    font-en()

.filter__left, .filter__right
    padding 24px

.filter__left
    border-right 1px solid $gray-50

.filter__right, .filter__box
    flex 1px

.filter__status
    margin-top 8px
    label
        display flex
        align-items center
        &:nth-child(n+2)
            margin-top 16px
    input
        opacity 0
        position absolute

.form-checkbox
    cursor pointer
    input:checked 
        + .form-checkbox__box
            background-color $brand-800
            border-color $brand-800
            .form-checkbox__check
                display block

.form-checkbox__box
    width 16px
    height 16px
    display flex
    align-items center
    justify-content center
    border-radius 4px
    border 1px solid $gray-200

.form-checkbox__check
    display none
    color $white

.form-checkbox__label
    margin-left 8px
    line-height 1
    
.filter__head, .filter__footer
    display flex
    flex-wrap: wrap
    gap 24px

.filter__footer
    margin-top 16px
    align-items flex-end

.form-select__control, .filter .react-datepicker__input-container input
    display flex
    align-items center
    form-style()
    
    select option:disabled
        color $gray-400
    input 
        font-size 1.4rem

.form-select__control
    border-color $gray-200!important
    border-radius 8px!important
    cursor pointer!important

.form-select__value-container
    padding 0!important
    display block!important

.form-select__input-container
    position absolute

.form-select__indicator-separator
    display none!important

.form-select__indicators 
    height 14px

.form-select__indicator 
    padding 0!important
    svg
        width 12px

.form-select__input-container
    padding 0!important
    margin 0!important

.form-select__placeholder
    line-height 1
    font-size 1.4rem!important
    
.filter
    .react-datepicker__day-name, .react-datepicker__day, .react-datepicker__time-name
        margin .4em!important

    .react-datepicker__day--selected, .react-datepicker__day--in-selecting-range, .react-datepicker__day--in-range, .react-datepicker__month-text--selected, .react-datepicker__month-text--in-selecting-range, .react-datepicker__month-text--in-range, .react-datepicker__quarter-text--selected, .react-datepicker__quarter-text--in-selecting-range, .react-datepicker__quarter-text--in-range, .react-datepicker__year-text--selected, .react-datepicker__year-text--in-selecting-range, .react-datepicker__year-text--in-range
        background-color $brand-800!important

    .react-datepicker__header
        background-color $brand-300!important

    .react-datepicker
        overflow hidden!important
        border-radius .8em!important
        shadow() !important

    .react-datepicker-wrapper, .react-datepicker-wrapper input
        width 100%

.css-1fdsijx-ValueContainer
    flex inherit!important


