@import "../../stylus/foundation/_mixin.styl"
@import "../../stylus/foundation/_variable.styl"

.header, .header__left, .header__right
    display flex
    align-items center

.header__left
    flex 1

.header__right
    gap 24px
.header__title
    font-size 2.4rem

.header
    padding 16px 32px
    border-bottom 1px solid $brand-300
    background $white

.addBtn
    width 40px
    height 40px
    border-radius 50%
    border: 1px solid $gray-50
    display flex
    align-items center
    justify-content center
    margin-left 16px
    cursor pointer

.darkModeBtn
    width 42px
    height 42px
    border-radius 50%
    display flex
    align-items center
    justify-content center
    cursor pointer
    &:hover
        background #2C2B2E
        color $white
        transition: .3s linear

.account-img
    width 42px
    height 42px
    border-radius 8px
    overflow hidden
    .initial
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center
        font-size: 1.4rem
        background: $gray-50
        font-weight: 600

.account-img, .notificationBtn
    cursor pointer

.modal-overlay 
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1; 
